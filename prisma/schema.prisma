generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  full_name String
  email     String   @unique
  role      String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  project_members ProjectMember[]
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  start_date  DateTime?
  end_date    DateTime?
  created_at  DateTime @default(now())

  members ProjectMember[]
  sprints Sprint[]
}

model ProjectMember {
  id         String   @id @default(uuid())
  project    Project  @relation(fields: [project_id], references: [id])
  project_id String
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String
  role       String?
}

model Sprint {
  id          String   @id @default(uuid())
  project     Project  @relation(fields: [project_id], references: [id])
  project_id  String
  name        String
  start_date  DateTime
  end_date    DateTime
  created_at  DateTime @default(now())

  tasks Task[]
}

model Task {
  id          String   @id @default(uuid())
  sprint      Sprint   @relation(fields: [sprint_id], references: [id])
  sprint_id   String
  title       String
  description String?
  status      String
  story_points Int?
  created_at  DateTime @default(now())

  logs TaskLog[]
}

model TaskLog {
  id              String   @id @default(uuid())
  task            Task     @relation(fields: [task_id], references: [id])
  task_id         String
  remaining_hours Int
  logged_at       DateTime @default(now())
}
